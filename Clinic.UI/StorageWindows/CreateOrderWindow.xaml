<Window x:Class="Clinic.UI.StorageWindows.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic.UI.StorageWindows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Создание записи" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <ComboBox Width="150px" materialDesign:HintAssist.Hint="Товар" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                <TextBlock Text="Таблетка1"/>
            </ComboBox>
            <TextBox Width="150px" materialDesign:HintAssist.Hint="Кол-во" Text=""  Margin="0, 0,0, 20" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <Label Content="Описание (необ.)" Width="150px"/>
            <TextBox Width="200px" Height="100px"/>
            <Button Content="Создать" Width="100px" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
